{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "target": "es2019",
    "lib": [
      "dom",
      "es2019"
    ],
    "paths": {
      "@build/*": [
        "./src/*"
      ],
      "@bundle/*": [
        "./src/contexts/bundle/*"
      ],
      "@documents/*": [
        "./src/contexts/documents/*"
      ],
      "@metadata/*": [
        "./src/contexts/metadata/*"
      ],
      "@tests/*": [
        "./src/contexts/tests/*"
      ]
    }
  },
  "exclude": [
    "./node_modules",
    "./src/**/*.test.ts",
    "./src/**/*.browser-test.ts",
    "./src/**/__test_fixtures__",
    "./csm",
    "./esm",
    "./tools"
  ]
}
